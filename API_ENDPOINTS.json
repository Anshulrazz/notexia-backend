{
  "baseUrl": "http://localhost:5000/api",
  "authentication": "JWT token in HTTP-only cookie (automatically set after login/register)",
  "endpoints": {
    "AUTH": {
      "description": "Authentication endpoints",
      "endpoints": [
        {
          "id": "AUTH_001",
          "method": "POST",
          "path": "/auth/register",
          "description": "Register a new user",
          "authentication": false,
          "request": {
            "body": {
              "name": "string (required)",
              "email": "string (required)",
              "password": "string (required)",
              "college": "string (optional)",
              "branch": "string (optional)",
              "year": "number (optional)"
            }
          },
          "response": {
            "success": {
              "status": 201,
              "headers": {
                "Set-Cookie": "token=<jwt_token>; HttpOnly; Secure; SameSite=Strict; Max-Age=604800"
              },
              "body": {
                "success": true,
                "user": {
                  "id": "string",
                  "name": "string",
                  "email": "string",
                  "role": "string"
                }
              }
            },
            "error": {
              "status": 400,
              "body": {
                "success": false,
                "message": "string"
              }
            }
          }
        },
        {
          "id": "AUTH_002",
          "method": "POST",
          "path": "/auth/login",
          "description": "Login user",
          "authentication": false,
          "request": {
            "body": {
              "email": "string (required)",
              "password": "string (required)"
            }
          },
          "response": {
            "success": {
              "status": 200,
              "headers": {
                "Set-Cookie": "token=<jwt_token>; HttpOnly; Secure; SameSite=Strict; Max-Age=604800"
              },
              "body": {
                "success": true,
                "user": {
                  "id": "string",
                  "name": "string",
                  "email": "string",
                  "role": "string"
                }
              }
            },
            "error": {
              "status": 401,
              "body": {
                "success": false,
                "message": "Invalid credentials"
              }
            }
          }
        },
        {
          "id": "AUTH_003",
          "method": "GET",
          "path": "/auth/me",
          "description": "Get logged-in user details",
          "authentication": true,
          "request": {
            "body": null
          },
          "response": {
            "success": {
              "status": 200,
              "body": {
                "success": true,
                "user": {
                  "id": "string",
                  "name": "string",
                  "email": "string",
                  "avatar": "string",
                  "college": "string",
                  "branch": "string",
                  "year": "number",
                  "role": "string",
                  "reputation": "number",
                  "isVerified": "boolean",
                  "createdAt": "timestamp",
                  "updatedAt": "timestamp"
                }
              }
            }
          }
